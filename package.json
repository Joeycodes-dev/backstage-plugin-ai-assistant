{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "20 || 22"
  },
  "scripts": {
    "start": "backstage-cli repo start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "tsc": "tsc",
    "tsc:full": "tsc --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "new": "backstage-cli new --scope sweetoburrito --no-private",
    "prepare": "husky",
    "release": "changeset version && yarn install --mode=update-lockfile",
    "publish": "changeset publish",
    "podman:up": "podman compose up -d",
    "podman:down": "podman compose down"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.34.4",
    "@backstage/e2e-test-utils": "backstage:^",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "prettier": "^2.3.2",
    "react": "^18.0.0",
    "react-dom": " ^18.0.0",
    "react-router-dom": "^7.0.0",
    "typescript": "~5.8.0"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@backstage/cli/config/prettier",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "yarn fix"
    ],
    "yarn.lock": [
      "yarn dedupe"
    ]
  },
  "packageManager": "yarn@4.4.1",
  "dependencies": {
    "@uiw/react-md-editor": "^4.0.8",
    "react-quill": "^2.0.0",
    "rehype-sanitize": "^6.0.0"
  }
}
